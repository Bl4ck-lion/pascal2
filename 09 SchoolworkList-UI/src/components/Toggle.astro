---
export interface Props {
	text: string;
    checked?: string;
    id: string;
    action: string;
}

const { text, checked, id, action } = Astro.props;
---
<div class="form-control flex-1 mx-1 custom-basis max-md:min-w-full">
    <label class="label cursor-pointer">
        <span class="label-text pr-4">{text}</span>
        <input type="checkbox" id={id} class="toggle toggle-primary" onclick={action} {checked}/>
    </label>
</div>
<style>
	.custom-basis {
		flex-basis: calc((100% / 2) - 2rem);
	}
</style>