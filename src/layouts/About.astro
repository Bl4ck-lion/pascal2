---
import FindMe from "../components/FindMe.astro";
import AboutInfo from "../components/AboutInfo.astro";
import AboutResume from "../components/AboutResume.astro";
import AboutSkill from "../components/AboutSkill.astro";
---
<section id="about" class="section">
	<div class="homecolor-box"></div>
	<div class="common_bg animate__animated animate__fadeInDown">
		<div class="container">
			<div class="about-content">
				<!-- About Title -->
				<div class="row">
					<div class="col-12">
						<div class="section-title animate__animated animate__fadeInDown animate__delay-1s">
							<p class="common-desctiption">My Intro</p>
							<h1 class="common-title">About <span>Me</span></h1>
							<div class="animated-bar"></div>
						</div>
					</div>
				</div>
				<!-- About Me -->
				<div class="row single-section">
					<div class="col-lg-4 profile-photo animate__animated animate__fadeInLeft animate__delay-2s">
						<div class="row">
							<div class="col-12 d-block col-sm-none">
								<img src="assets/images/1.webp" class="img-fluid main-img-mobile" alt="my picture" />
							</div>
						</div>
					</div>
					<div class="col-lg-8 col-sm-12">
						<div class="row personal-info animate__animated animate__fadeInRight animate__delay-2s">
							<div class="col-12">
								<h5 class="personal-title">WHO AM <span>I ?</span></h5>
								<h3 class="personal-title">
									I'm a <span>Website UX/UI Designer</span>, <span> Whatsapp Bot Developer</span>, <span>Game Modder</span>, <span>Game Developer</span> and <span>3D Artist</span>.
								</h3>
								<p class="info">
									I'm currently living in Indonesia and I'm currently learning 3D Art. I'm kinda good at C#, JS, <a href="https://github.com/sonicjhon1/laffey-whatsapp"
										>CSS and HTML</a
									>. I also have some experience in Bash, Batch, Poweshell, Python, and Kotlin. My hobbies includes: Playing games, modding games, customizing PC & Linux Desktop, and
									making PFP GFX. I usually code with VSCode and uploads my project with Git into Github (most of them are private).
								</p>
							</div>
							<div class="row align-items-center">
								<div class="col-lg-12">
									<h3 class="personal-infotitle">
										Some More <span>informations</span>
									</h3>
								</div>
								<div class="col-lg-6">
									<ul class="about-you">
										<AboutInfo title="Nickname 	:" value="Sonic Jhon"/>
										<AboutInfo title="Currently	:" value="Learning 3D"/>
										<AboutInfo title="From 		:" value="Medan, Indonesia"/>
										<AboutInfo title="Languages	:" value="English, Indonesia, Japanese"/>
									</ul>
								</div>
								<div class="col-lg-6">
									<ul class="about-you">
										<AboutInfo title="E-mail 	:" value=""><a href='mailto:sonicjhon1@gmail.com'>sonicjhon1@gmail.com</a></AboutInfo>
										<AboutInfo title="Github 	:" value=""><a href='https://github.com/sonicjhon1'>https://github.com/sonicjhon1</a></AboutInfo>
										<AboutInfo title="Age 		:" value="16 years old"/>
										<AboutInfo title="Freelance	:" value="Available"/>
									</ul>
								</div>
								<div class="col-lg-12">
									<div class="About-btn">
										<a target="_blank" href="https://github.com/sonicjhon1/sonicjhon1.github.io">
											<button style="margin: 4.5px; margin-left: 0;" class="clickbtn view-source">View source code <i class="fab fa-github" aria-hidden="true"></i></button>
										</a>
										<button style="margin: 4.5px; margin-left: 0;" class="clickbtn view-source" id="dl-button">Download PDF <i class="fa fa-download" aria-hidden="true"></i></button>
										<!-- Social Media Icons-->
										<div class="col-lg-7 col-sm-6 col-12">
											<ul class="list-unstyled social-icons">
												<FindMe/>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Resume Section -->
				<div class="resume-section">
					<!-- Resume Title -->
					<div class="row">
						<div class="col-12">
							<div class="section-title animate__animated animate__fadeInUp animate__delay-3s">
								<p class="common-desctiption">Check out my Resume</p>
								<h1 class="common-title">My <span>Resume</span></h1>
								<div class="animated-bar"></div>
							</div>
						</div>
					</div>
					<!-- Resume Content -->
					<div class="row">
						<div class="projects">
							<div class="row">
								<h3 class="about-subtitle">Open-source Projects</h3>
								<AboutResume title="Laffey-WhatsApp" detail="3.5.0 (deprecated)" desc="A Laffey (Azurlane) theme for WhatsApp web made with CSS and Stylus!">
									<a href="https://github.com/sonicjhon1/arknights-google" title="arknights-google on Github">Go onto the Github project.</a>
								</AboutResume>
								<AboutResume title="Arknights-Google" detail="1.0.0 (deprecated)" desc="An Arknights theme for the google search engine.">
									<a href="https://github.com/sonicjhon1/arknights-google" title="arknights-google on Github">View it on Github.</a>
								</AboutResume>
								<AboutResume title="Sonicj.pages.dev" detail="1.0.0" desc="My own website (and my first one) to store my progress, projects, and other stuff.">
									<a href="https://github.com/sonicjhon1/sonicjhon1.github.io" title="arknights-google on Github">View the Source code in Github here!</a>
								</AboutResume>
								<AboutResume title="GawrZu-Bot" detail="2.0.0 (deprecated)" desc="GawrGura Nezuko Whatsapp Bot! It has many many features, but it has been deprecated.">
									<a href="https://github.com/sonicjhon1/arknights-google" title="arknights-google on Github">Github link to the bot.</a>
								</AboutResume>
							</div>
						</div>
					</div>
				</div>
				<!-- Skill Bar Section -->
				<div class="skill-section">
					<div class="row">
						<div class="col-12">
							<div class="section-title animate__animated animate__fadeInUp animate__delay-3s">
								<p class="common-desctiption">My level of knowledge for some tools</p>
								<h1 class="common-title">My <span>Skills</span></h1>
								<div class="animated-bar"></div>
							</div>
						</div>
						<AboutSkill title="UI / UX">
							<div class="bar">
								<div class="info">
									<span>CSS</span>
								</div>
								<div class="progress-line CSS">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>HTML</span>
								</div>
								<div class="progress-line HTML">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>Javascript</span>
								</div>
								<div class="progress-line JS">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>UXML</span>
								</div>
								<div class="progress-line UXML">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>MarkDown</span>
								</div>
								<div class="progress-line MD">
									<span></span>
								</div>
							</div>
						</AboutSkill>
						<AboutSkill title="Coding">
							<div class="bar">
								<div class="info">
									<span>C#</span>
								</div>
								<div class="progress-line CSharp">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>Python</span>
								</div>
								<div class="progress-line Python">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>GDScript</span>
								</div>
								<div class="progress-line GDScript">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>Bash/Batch</span>
								</div>
								<div class="progress-line Bash">
									<span></span>
								</div>
							</div>
							<div class="bar">
								<div class="info">
									<span>Kotlin</span>
								</div>
								<div class="progress-line Kotlin">
									<span></span>
								</div>
							</div>
						</AboutSkill>
					</div>
				</div>
				<!-- Fun Fact Section -->
				<div class="funfacts-section">
					<div class="row">
						<div class="col-12">
							<div class="section-title">
								<p class="common-desctiption">Some Fun Facts</p>
								<h1 class="common-title">Fun <span>Facts</span></h1>
								<div class="animated-bar"></div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-3 col-md-6">
							<div class="funfacts-box">
								<h3 class="counter" data-to="3" data-time="10000">2</h3>
								<p class="fun-text">Years Of <span>Experience</span></p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="funfacts-box">
								<h3 class="counter" data-to="50" data-time="500">0</h3>
								<p class="fun-text">Happy Clients</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="funfacts-box">
								<h3 class="counter" data-to="20" data-time="1500">0</h3>
								<p class="fun-text">Completed Projects</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>