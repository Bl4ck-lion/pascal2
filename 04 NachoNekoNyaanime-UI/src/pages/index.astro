---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Banner from '../components/Banner.astro';
import Section from '../components/Section.astro';

const fetchAnime = await fetch('https://api.consumet.org/meta/anilist/info/140960').then(r => r.json());
---
<script>
      async function fetchAnime() {
		return (await fetch('https://api.consumet.org/meta/anilist/info/140960')).json();
	}
      const response = await fetchAnime();
      console.log( response.results );
</script>

<Layout>
	<Header/>
      <Banner 
            anime={fetchAnime}
      />
      <Section title="Trending Now" animeList="{trending.media}"/>
      <Section title="Popular" animeList="{popular.media}"/>
      <Section title="Top Rated (All time)" animeList="{topRated.media}"/>
</Layout>

