---
export interface Props {
	href: string;
	caption: string;
}

const { href, caption } = Astro.props;
---

<li class="mix webdesign col-xl-3 col-lg-4 col-md-6">
	<a
		title="click to zoom-in"
		href=`https://api.apiflash.com/v1/urltoimage?access_key=79b0e7c367b84a8387c8041566437096&url=https://sonicj.pages.dev/${href}&format=webp&response_type=image&width=1280&height=720&quality=90`
		data-caption={caption}
	>
	</a>
</li>
