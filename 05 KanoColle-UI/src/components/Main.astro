---
import ThreeDotsIcon from "./ThreeDotsIcon.astro";

---

<main class="font-700">
    <div style="display: flex; flex-direction: column;">
        <div class="header">
            <a href="./songs">
                <div class="title underline">Songs</div>
                <div class="see-all font-400">SEE ALL</div>
            </a>
            <section id="songs">
                <article>
                    <div class="song-container">
                        <div class="thumbnail">
                            <img src="https://lh3.googleusercontent.com/RfAkV--EzeI7PBt4nf9XHFj-JmgB9gx9iVFiW7z3cE7bSuVpRRIqNZ436wN41pxaqP-B5BBtQ79Zxhx_=w60-h60-l90-rw" alt="">
                        </div>
                        <div class="song-metadata">
                            <a href="https://music.youtube.com/watch?v=8TqbkDpqtD4">
                                <span class="song-title font-500">Nadamesukashi Negotiation</span>
                            </a>
                            <div>
                                <a href="" class="song-artist font-400">Kano</a>
                            </div>
                        </div>
                    </div>
                    <div class="three-dots-container">
                        <div class="three-dots">
                            <a href="">
                                <ThreeDotsIcon/>
                            </a>
                        </div>
                    </div>
                </article>
                <article>
                    <div class="song-container">
                        <div class="thumbnail">
                            <img src="https://lh3.googleusercontent.com/RfAkV--EzeI7PBt4nf9XHFj-JmgB9gx9iVFiW7z3cE7bSuVpRRIqNZ436wN41pxaqP-B5BBtQ79Zxhx_=w60-h60-l90-rw" alt="">
                        </div>
                        <div class="song-metadata">
                            <a href="https://music.youtube.com/watch?v=8TqbkDpqtD4">
                                <span class="song-title font-500">Nadamesukashi Negotiation</span>
                            </a>
                            <div>
                                <a href="" class="song-artist font-400">Kano</a>
                            </div>
                        </div>
                    </div>
                    <div class="three-dots-container">
                        <div class="three-dots">
                            <a href="">
                                <ThreeDotsIcon/>
                            </a>
                        </div>
                    </div>
                </article>
            </section>
        </div>
        <div class="header">
            <div class="title underline">Albums</div>
            <section id="albums">

            </section>
        </div>
        <div class="header">
            <a href="./songs">
                <div class="title underline">Singles</div>
                <div class="see-all font-400">SEE ALL</div>
            </a>
            <section id="singles">

            </section>
        </div>
    </div>
</main>

<style>
    main {
        padding-left: 2rem;
        margin-top: 3rem;
        position: absolute;
        z-index: 10;
        overflow-x: hidden;
        overflow-y: visible;
    }

    @media screen and (max-width: 300px) {
        main {
            padding-left: 2rem;
        }
    }

    @media screen and (min-width:381px) and (max-width: 580px) {
        main {
            padding-left: 2rem;
        }
    }

    @media screen and (min-width:581px) and (max-width:800px) {
        main {
            padding-left: 7rem;
        }
    }

    @media screen and (min-width:801px) {
        main {
            padding-left: 7rem;
        }
    }

    .header {
        margin-top: 20%;
    }

    a, a:visited {
        color: #FFFFFF;
        text-decoration: none;
    }

    .underline {
        text-decoration: underline;
    }

    .title {
        font-size: 2.5rem;
        display: inline-block;
        letter-spacing: -.02em;
        text-shadow: rgba(0,0,0,.171) .2rem -.12rem .5rem;
    }
    @media (min-width: 320px) and (max-width: 499px) {
        .title {
            font-size: 2rem;
        }
	}
	@media (min-width: 500px) and (max-width: 640px) {
        .title {
            font-size: 2rem;
        }
	}
    @media screen and (min-width: 642px) and (max-width: 839px) {
        .title {
            font-size: 2.5rem;
        }
    }
    @media screen and (min-width: 840px) {
        .title {
            font-size: 3.5rem;
        }
    }

    .see-all {
        font-size: smaller;
        color: gray;
    }

    article {
        align-content: center;
        cursor: pointer;
        display: flex;
        height: 5.25em;
        justify-content: space-between;
        line-height: 1.5;
        padding: 0 1em;
        touch-action: auto;
        background-color: transparent;
        position: relative;
        margin-top: 1rem;
    }

    .song-container {
        display: flex;
        align-items: center;
        align-self: center;
        flex-direction: row;
        gap: .875em;
        max-width: calc(100% - 3em);
    }

    .thumbnail>img {
        aspect-ratio: 1/1;
        border-radius: 20%;
        max-height: 4.25em;
        max-width: 4.25em;
        min-height: 4.25em;
        min-width: 4.25em;
    }

    .thumbnail {
        aspect-ratio: 1/1;
        border-radius: 20%;
        max-height: 4.25em;
        max-width: 4.25em;
        min-height: 4.25em;
        min-width: 4.25em;
        position: relative;
    }

    img::before {
        content: "";
        display: block;
        padding-top: 66.7%;
    }

    img {
        position: absolute;
        -webkit-text-size-adjust: none;
        border-radius: 20%;
        margin: 0;
        max-width: 100%;
        user-select: none;
        vertical-align: middle;
        border-style: none;
    }

    .song-metadata {
        position: relative;
        flex-direction: column;
        justify-content: center;
        max-width: calc(100% - 4.45em);
        display: flex;
        width: 100%;
        flex-shrink: 0;
    }

    .song-title {
        user-select: none;
    }

    .song-title:hover {
        text-decoration: underline;
    }

    .song-artist {
        color: gray !important;
    }

    .song-artist:hover {
        text-decoration: underline;
    }

    .three-dots-container {
        display: flex;
        align-self: center;
        align-items: center;
        width: 2.45em;
        cursor: pointer;
    }

    .three-dots {
        display: flex;
        cursor: pointer;
        isolation: isolate;
        padding: .4rem;
        position: relative;
        touch-action: none;
        user-select: none;
    }
</style>